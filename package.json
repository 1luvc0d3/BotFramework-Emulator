{
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run --scope \"@bfemulator/@(**shared|sdk**)\" build && lerna run --scope \"!@bfemulator/@(**shared|sdk**)\" build",
    "test": "jest --runInBand",
    "test:coveralls": "jest --runInBand --coverage --coverageReporters=text-lcov | coveralls"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./testSetup.js",
    "transform": {
      "^.+\\.(tsx?|jsx?)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/packages/**/src/**/?(*.)(spec|test).(ts)?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
