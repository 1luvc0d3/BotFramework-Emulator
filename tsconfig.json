{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "target": "es6",
        "jsx": "react",
        "sourceMap": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noEmitOnError": true,
        "outDir": "app",
        "watch": true,
        "removeComments": true
    },
    "exclude": [
        "node_modules",
        "app"
    ]
}